  <!-- LIGHTBOX STRUCTURE -->
  <div class="lightbox-overlay" id="lightbox">
    <button class="lightbox-close" id="lightbox-close">
      <img src="../logos/fermer.svg" alt="Fermer">
    </button>
    <div class="lightbox-window">
      <div class="lightbox-left">
        <img id="lightbox-img" src="" alt="">
      </div>
      <div class="lightbox-right">
        <h3 id="lightbox-title"></h3>
        <p id="lightbox-date" class="lightbox-date"></p>
        <p id="lightbox-desc"></p>
        <div class="lightbox-extra-images" id="lightbox-extra"></div>
      </div>
    </div>
  </div>

  <script>

    // ----- LIGHTBOX -----
const thumbs = document.querySelectorAll('.prspk-thumb');
const lightbox = document.getElementById('lightbox');
const lightboxImg = document.getElementById('lightbox-img');
const lightboxTitle = document.getElementById('lightbox-title');
const lightboxDate = document.getElementById('lightbox-date');
const lightboxDesc = document.getElementById('lightbox-desc');
const lightboxExtra = document.getElementById('lightbox-extra');
const closeBtn = document.getElementById('lightbox-close');
const lightboxHeart = document.createElement('button'); // cÅ“ur dans la lightbox
lightboxHeart.className = 'like-bubble lightbox-like';
lightboxHeart.innerHTML = `<img class="like-icon" alt=""><span class="like-count"></span>`;


thumbs.forEach(img => {
  img.addEventListener('click', () => {
    // Image principale
    lightboxImg.src = img.src;

    // Titre
    lightboxTitle.textContent = img.dataset.title || '';

    // Date
    lightboxDate.textContent = img.dataset.date || '';

    // Description avec HTML interprÃ©tÃ© (<br>, <strong>, etc.)
    lightboxDesc.innerHTML = img.dataset.desc || '';

    // Afficher la lightbox et bloquer le scroll
    lightbox.classList.add('active');
    document.body.style.overflow = 'hidden';
  });
});

// Fermer avec le bouton
closeBtn.addEventListener('click', () => {
  lightbox.classList.remove('active');
  document.body.style.overflow = '';
});

// Fermer en cliquant sur le fond
lightbox.addEventListener('click', (e) => {
  if (e.target === lightbox) {
    lightbox.classList.remove('active');
    document.body.style.overflow = '';
  }
});

const id = img.id; // id de la crÃ©ation cliquÃ©e
lightbox.dataset.id = id;

if (!lightboxHeart.isConnected) {
  lightbox.querySelector('.lightbox-right').appendChild(lightboxHeart);
  lightboxHeart.addEventListener('click', () => {
    LikesStore.toggle(id);
    updateLikeUI(id);
  });
}

updateLikeUI(id); // met Ã  jour icÃ´ne + compteur

  </script>

<script>
const LikesStore = {
  key: 'perspikative-likes',
  getAll() { return JSON.parse(localStorage.getItem(this.key)) || {}; },
  get(id) { return this.getAll()[id] || { liked: false, count: 0 }; },
  toggle(id) {
    const data = this.getAll();
    const item = data[id] || { liked: false, count: 0 };
    item.liked = !item.liked;
    item.count += item.liked ? 1 : -1;
    data[id] = item;
    localStorage.setItem(this.key, JSON.stringify(data));
    return item;
  }
};

// CrÃ©er bouton pour chaque image avec data-heart
document.querySelectorAll('[data-heart]').forEach(img => {
  const id = img.id;
  const btn = document.createElement('button');
  btn.className = 'like-bubble';
  btn.innerHTML = `<img class="like-icon" src="../logos/heart.svg" alt=""><span>0</span>`;
  img.style.position = 'relative';
  img.parentNode.style.position = 'relative';
  img.parentNode.appendChild(btn);

  btn.addEventListener('click', e => {
    e.stopPropagation();
    LikesStore.toggle(id);
    const { liked, count } = LikesStore.get(id);
    btn.querySelector('.like-icon').src = liked ? '../logos/heart-active.svg' : '../logos/heart.svg';
    btn.querySelector('span').textContent = count;
  });

  // initialiser compteur
  const { liked, count } = LikesStore.get(id);
  btn.querySelector('.like-icon').src = liked ? '../logos/heart-active.svg' : '../logos/heart.svg';
  btn.querySelector('span').textContent = count;
});
</script>

  <script>
    const menuToggle = document.getElementById('menuToggle');
    menuToggle.addEventListener('change', (e) => {
      document.body.classList.toggle('menu-open', e.target.checked);
    });
  </script>

