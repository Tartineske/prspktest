    summary::-webkit-details-marker {
      display: none; /* Supprime la flèche par défaut */
    }

    /* Ajout d’un petit symbole + / - */
    summary::after {
      content: "➕";
      float: right;
      transition: transform 0.3s ease;
    }

    details[open] summary::after {
      content: "➖";
      transform: rotate(180deg);
    }

